<div></div>
<div>ddd</div>
<div>ddd</div>
<div class="ui segment">
    <img class="ui centered medium image" src="{{user.image}}">
</div>
<section style="margin-top: 8vh;">
    <div class="ui placeholder segment">
        <div class="ui two column very relaxed stackable grid">
            <div class="column">
                <div class="ui form">
                    <div class="field">
                        <label>Username: </label>
                        <div class="ui left icon input">
                            {{!-- <i class="user icon"></i> --}}
                            {{user.name}}
                        </div>
                    </div>
                    <div class="field">
                        <label>Lastname: </label>
                        <div class="ui left icon input">
                            {{user.lastname}}
                        </div>
                    </div>
                    <div class="field">
                        <label>Email: </label>
                        <div class="ui left icon input">
                            {{user.email}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="middle aligned column">
                <form action="/profiluserEdit/:id" method="get">
                    <button class="ui primary button">Edit your profil!</button>
                </form>
            </div>
        </div>
        <div class="ui vertical divider">
        </div>
    </div>

    <div class="" style="margin-top: 8vh;">
        <h3 class="manage-products-title">Your Booking Filght</h3>
        <table class="ui celled table">
            <thead>
                <tr class="table-row">
                    <th class="table-head">Departure</th>
                    <th class="table-head">Destination</th>
                    <th class="table-head">Description</th>
                    <th class="table-head">Price</th>
                    <th class="table-head">Delete</th>
                </tr>
            </thead>

            <tbody>

                {{#each travelOld}}
                <tr>
                    <td>
                        {{this.Departure}}
                    </td>
                    <td>
                        {{this.Destination}}
                    </td>
                    <td>
                        {{this.Description}}
                    </td>
                    <td>
                        {{this.Price}}
                    </td>
                    <td>
                        <a href="/delete/travelDelete/{{this.id}}">Delete</a>
                    </td>
                </tr>
                </tr>
                {{/each}}
                {{#unless travelOld}}
                <tr>
                    {{!-- <td colspan="8" class="selectable">sorry no flight yet</td> --}}
                    <td colspan="8" class="selectable">Sorry no flight yet</td>
                </tr>
                {{/unless}}
            </tbody>
        </table>
    </div>
</section>
