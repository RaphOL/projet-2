<form method="POST" action="/profiluserEdit/{{user._id}}">
    <h3 class="form-title"> Edit your profile</h3>
    <div>
        <label for="user-name">Name</label>
        <input id="user-name" name="name" type="text" placeholder="Raph" value="{{user.name}}">
    </div>
    <div>
        <label for="user-lastname">Lastname</label>
        <input id="user-lastname" name="lastname" type="text" placeholder="Albert" value="{{user.lastname}}">
    </div>
    <div>
        <label for="user-email">Email</label>
        <input id="user-email" name="email" type="text" placeholder="raph.albert@gmail.com" value="{{user.email}}">
    </div>
    <button class="button-primary add-sneaker-btn">Edit your profile</button>
</form>