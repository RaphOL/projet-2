<div class="card-box">
    {{#each this}}
    <div data-aos="zoom-in" class="property-card">
        <div class="property-image">
            <img class="size-image" class="image" src="/images/rusty-watson-Xo7MkRUKNPQ-unsplash.jpg" alt="" srcset="">
            <div class="property-image-title">
                <form action="/book/{{this._id}}" method="post">
                    <button name="book">See this flight</button>
                </form>
            </div>
        </div>
        <div class="property-description">
            <h5>Destination: {{this.Destination}}</h5>
            <p>Departure: {{this.Departure}}</p>
            <p>Price : {{this.Price}}â‚¬</p>
            <p>Available Seats : {{this.availableSeats}}</p>
        </div>
        <a href="/profileuser">
            <div class="user circle icon profile">

            </div>
        </a>
    </div>
    {{/each}}
</div>