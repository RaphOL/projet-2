<div id="main-div-signin-user">
  <section id="section-signin-user">

    <h1 class="ui middle aligned center aligned grid">Welcome back!</h1>
    <p class="ui middle aligned center aligned grid">Enjoy yourself and be comfortable before your next fly!</p>

    <div class="ui middle aligned center aligned grid">
      <div class="column">
        <h2 class="ui blue image header">
          <div class="content">
            Sign-in to your account
          </div>
        </h2>
        {{#if msg}}
        <p class="message {{msg.status}}">{{msg.text}}</p>
        {{/if}}
        <form method="POST" action="/signin/pilot" class="ui large form">
          <div class="ui stacked segment">
            <div class="field">
              <div class="ui left icon input">
                <i class="user icon"></i>
                <label for="email"></label>
                <input id="email" type="text" name="email" placeholder="e-mail address">
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="lock icon"></i>
                <label for="password"></label>
                <input id="password" type="password" name="password" placeholder="********">
              </div>
            </div>
            <button class="ui fluid large blue submit button">Login</button>
          </div>

        </form>

        <div class="ui message">
          New to us? join us and fly with us! <a href="/signup/user">Sign Up</a>
        </div>
      </div>
    </div>
    {{#if error_msg}}
    <div class="ui middle aligned center aligned grid error-msg">
      {{error_msg}}
    </div>
    {{/if}}
  </section>
</div>

